<?xml version="1.0" encoding="UTF-8"?>
<quiz>
    <!-- ألغاز سهلة -->
    <question difficulty="easy">
        <text>حاجة تمشي بلا كرعين (أرجل) وتبكي بلا عينين، ما هي؟</text>
        <answers>
            <answer correct="true">السحابة</answer>
            <answer>الحلزون</answer>
            <answer>النهر</answer>
            <answer>الأفعى</answer>
        </answers>
    </question>
    <question difficulty="easy">
        <text>دارنا حمرا وسكانها عبيد (سود)، ما هي؟</text>
        <answers>
            <answer correct="true">الدلاعة (البطيخ الأحمر)</answer>
            <answer>الرمان</answer>
            <answer>الفلفل الحار</answer>
            <answer>علبة الكبريت</answer>
        </answers>
    </question>
    <question difficulty="easy">
        <text>يضرب بلا يدين ويمشي بلا رجلين، فمن هو؟</text>
        <answers>
            <answer correct="true">الساعة</answer>
            <answer>الريح</answer>
            <answer>القلب</answer>
            <answer>البرق</answer>
        </answers>
    </question>
    <question difficulty="easy">
        <text>عندها الرقبة وماعندهاش الراس، وعندها اليدين وماعندهاش الصباع (الأصابع)، ما هي؟</text>
        <answers>
            <answer correct="true">القميص (الجبة)</answer>
            <answer>الكرسي</answer>
            <answer>القارورة</answer>
            <answer>الشجرة</answer>
        </answers>
    </question>
     <question difficulty="easy">
        <text>يطير بلا جناحين و يلسع بلا فم، ما هو؟</text>
        <answers>
            <answer correct="true">البرد (الطقس البارد)</answer>
            <answer>الرصاصة</answer>
            <answer>النحلة</answer>
            <answer>النظر</answer>
        </answers>
    </question>

    <!-- ألغاز متوسطة -->
    <question difficulty="medium">
        <text>طير طايير في السما، نصو فضة ونصو نحاس، ما هو؟</text>
        <answers>
            <answer correct="true">البيضة</answer>
            <answer>الشمس والقمر</answer>
            <answer>الطائرة</answer>
            <answer>العملة المعدنية</answer>
        </answers>
    </question>
    <question difficulty="medium">
        <text>خضرة من برا وحمرا من داخل، وفي قلبها جيش كحل (أسود)، ما هي؟</text>
        <answers>
            <answer correct="true">الدلاعة (البطيخ الأحمر)</answer>
            <answer>التفاحة</answer>
            <answer>الرمانة</answer>
            <answer>البرتقالة</answer>
        </answers>
    </question>
    <question difficulty="medium">
        <text>حفرة مافيهاش التراب، ما هي؟</text>
        <answers>
            <answer correct="true">السجن</answer>
            <answer>البئر</answer>
            <answer>الجرح</answer>
            <answer>القبر</answer>
        </answers>
    </question>
    <question difficulty="medium">
        <text>عمتك خالة بوك (أبيك)، شكون (من) هي؟</text>
        <answers>
            <answer correct="true">أخت جدك (عمتك)</answer>
            <answer>أمي</answer>
            <answer>أختي</answer>
            <answer>خالتي</answer>
        </answers>
    </question>
    <question difficulty="medium">
        <text>نسقيوها من لحمها ودمها، وكي تكبر نبيعوها، ما هي؟</text>
        <answers>
            <answer correct="true">الشمعة</answer>
            <answer>النخلة</answer>
            <answer>الدجاجة</answer>
            <answer>الزهرية</answer>
        </answers>
    </question>

    <!-- ألغاز صعبة -->
    <question difficulty="hard">
        <text>ميت يرفد في حي، والحي يعيط ويصيح، ما هو؟</text>
        <answers>
            <answer correct="true">الجرس في عنق البهيمة</answer>
            <answer>النعش</answer>
            <answer>السفينة والركاب</answer>
            <answer>الأم وطفلها</answer>
        </answers>
    </question>
    <question difficulty="hard">
        <text>حاجة كي تشوفها ما تلبسهاش، وكي تلبسها ما تشوفهاش، ما هي؟</text>
        <answers>
            <answer correct="true">الكفن</answer>
            <answer>النظارات</answer>
            <answer>القبعة</answer>
            <answer>الجوارب</answer>
        </answers>
    </question>
    <question difficulty="hard">
        <text> ثلاثة خاوة (إخوة)، واحد يمشي وما يرجعش، وواحد ياكل وما يشبعش، وواحد راقد ما ينوضش (لا ينهض)، فمن هم؟</text>
        <answers>
            <answer correct="true">الدخان والنار والرماد</answer>
            <answer>الماضي والحاضر والمستقبل</answer>
            <answer>النهر والبحر والحجر</answer>
            <answer>العمر والجوع والموت</answer>
        </answers>
    </question>
    <question difficulty="hard">
        <text>جداتو بقرة وخالاتو شجرة، وهو يتباع في الحوانت (المتاجر)، ما هو؟</text>
        <answers>
            <answer correct="true">المسواك</answer>
            <answer>الجلد</answer>
            <answer>التمر</answer>
            <answer>اللبن</answer>
        </answers>
    </question>
     <question difficulty="hard">
        <text>واش هي الحاجة اللي عندها خمس صوابع (أصابع) بصح ماشي يد؟</text>
        <answers>
            <answer correct="true">القفاز</answer>
            <answer>المشط</answer>
            <answer>الشوكة</answer>
            <answer>ورقة الشجر</answer>
        </answers>
    </question>
</quiz>
